<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piotrzadka.cheeselist.DetailsActivity">

    <TextView
        android:id="@+id/cheeseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_marginTop="25dp"
        android:text="@string/cheeseLabel"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/cheeseDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cheeseLabel"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="76dp"
        android:text="@string/cheeseDesc"
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/cheeseImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/cheeseDesc"
        android:layout_alignStart="@+id/cheeseDesc"
        android:layout_alignTop="@+id/cheeseLabel"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>
